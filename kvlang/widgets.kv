## =============================================================================
## DisplayField LABELS
## =============================================================================
<DisplayField@Label>
    color: utils.rgba('#c8c8c8ff')
    valign: 'center'
    halign: 'center'
    markup: 1

<TitleField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(14*app.scaleFactor)
    size_hint_y: (13/202)

<LargeField@DisplayField>
    font_name: 'fonts/Inter-ExtraLight.ttf'
    font_size: dp(29*app.scaleFactor)
    size_hint_y: (27/202)

<MediumField@DisplayField>
    font_name: 'fonts/Inter-Light.ttf'
    font_size: dp(20*app.scaleFactor)
    size_hint_y: (18/202)

<SmallField@DisplayField>
    font_name: 'fonts/Inter-Regular.ttf'
    font_size: dp(14*app.scaleFactor)
    size_hint_y: (13/202)

<BoldField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(14*app.scaleFactor)
    size_hint_y: (13/202)

<TimeDateField@DisplayField>
    font_name: 'fonts/Inter-Medium.ttf'
    font_size: dp(20*app.scaleFactor)
    size_hint_y: (18/202)

## =============================================================================
## MenuField, StatusField, AND StatusColumn LABELS
## =============================================================================
<MenuField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(13*app.scaleFactor)
    size_hint_y: (13/202)

<StatusField@DisplayField>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(13*app.scaleFactor)

<StatusColumn@DisplayField>:
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(13*app.scaleFactor)
    color: utils.rgba('#141414ff')
    canvas.before:
        Color:
            rgba: utils.rgba('#c8c8c8cc')
        Rectangle:
            pos: self.x + 5, self.y
            size: self.width-10, self.height

## =============================================================================
## PanelTitle LABELS
## =============================================================================
<PanelTitle@DisplayField>:
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(14*app.scaleFactor)
    size_hint: (1, 13/202)
    pos_hint: {'x': 0, 'y': 185/202}
    color: utils.rgba('#ffffffff')

<PanelStatus@DisplayField>:
    font_name: 'fonts/Inter-Medium.ttf'
    font_size: dp(12 * app.scaleFactor)
    size_hint: (0.97, 23 / 202)
    pos_hint: {'x': 0.015, 'y': 180 / 202}
    color: utils.rgba('#ffffffff')
    text_size: self.size
    halign: 'right'
    valign: 'center'

## =============================================================================
## MultilineField LABELS
## =============================================================================
<MediumMultilineField@Label>
    font_name: 'fonts/Inter-Light.ttf'
    font_size: dp(18*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'

<SmallMultilineField@Label>
    font_name: 'fonts/Inter-Regular.ttf'
    font_size: dp(14*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'

<BoldMultilineField@Label>
    font_name: 'fonts/Inter-Bold.ttf'
    font_size: dp(14*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'

<CreditsMultilineField@Label>:
    font_name: 'fonts/Inter-SemiBold.ttf'
    font_size: dp(15*app.scaleFactor)
    text_size: self.size
    color: utils.rgba('#c8c8c8ff')
    markup: 1
    halign: 'center'
    valign: 'center'

## =============================================================================
## PanelButton AND MenuButton
## =============================================================================
<PanelButton@Button>:
    font_size: dp(15.5*app.scaleFactor)
    font_name: 'fonts/Inter-SemiBold.ttf'
    color: utils.rgba('#d6d6d6ff')
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: utils.rgba('#1e1e1eff') if self.state=='normal' else utils.rgba('#00525aff')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [14*app.scaleFactor]

<MenuButton@Button>:
    font_size: dp(15.5*app.scaleFactor)
    font_name: 'fonts/Inter-SemiBold.ttf'
    color: utils.rgba('#d6d6d6ff')
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: utils.rgba('#1e1e1eff') if self.state=='normal' else utils.rgba('#00525aff')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [14*app.scaleFactor]

## =============================================================================
## CUSTOM DeviceSpinner, StationSpinner and SwitchButton
## =============================================================================
<SwitchButton@Button>
    canvas.before:
        Color:
            rgba: utils.rgba('#1e1e1eff') if self.state=='normal' else utils.rgba('#00525aff')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [14*app.scaleFactor]
    background_normal: ''
    background_color: 0, 0, 0, 0
    font_size: dp(14*app.scaleFactor)
    font_name: 'fonts/Inter-SemiBold.ttf'
    color: utils.rgba('#d6d6d6ff')

<DeviceSpinner@Spinner>:
    canvas.before:
        Color:
            rgba: utils.rgba('#1e1e1eff') if self.state=='normal' else utils.rgba('#00525aff')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [14*app.scaleFactor]
    font_size: dp(14*app.scaleFactor)
    font_name: 'fonts/Inter-SemiBold.ttf'
    color: utils.rgba('#d6d6d6ff')
    background_normal: ''
    background_color: 0, 0, 0, 0
    sync_height: True
    disabled: 1
    selected: 1 if self.text != 'Please select' and not self.disabled else 0
    pos_hint: {'center': (.5, .5)}
    option_cls: Factory.selectOption
    dropdown_cls: Factory.CustomDropdown

<StationSpinner@Spinner>:
    canvas.before:
        Color:
            rgba: utils.rgba('#1e1e1eff') if self.state=='normal' else utils.rgba('#00525aff')
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [14*app.scaleFactor]
    font_size: dp(14*app.scaleFactor)
    font_name: 'fonts/Inter-SemiBold.ttf'
    color: utils.rgba('#d6d6d6ff')
    background_normal: ''
    background_color: 0, 0, 0, 0
    sync_height: True
    pos_hint: {'center': (.5, .5)}
    option_cls: Factory.selectOption
    dropdown_cls: Factory.CustomDropdown

<selectOption@SpinnerOption>
    canvas.before:
        Color:
            rgba: utils.rgba('#404040ff') if self.state=='normal' else utils.rgba('#00525aff')
        RoundedRectangle:
            pos: [self.x+2, self.y+2]
            size: [self.width-4, self.height-4]
            radius: [14*app.scaleFactor]
    background_color: (0,0,1,0)
    font_size: dp(14*app.scaleFactor)
    font_name: 'fonts/Inter-SemiBold.ttf'
    color: utils.rgba('#c8c8c8ff')

<CustomDropdown@DropDown>:
    canvas.before:
        Color:
            rgba: utils.rgba('#101010ff')
        RoundedRectangle:
            pos: [self.x, self.y+1]
            size: [self.width, self.height-2]
            radius: [14*app.scaleFactor]

